<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="StyledIndicators" parent="android:Theme.Light">
        <item name="vpiIconPageIndicatorStyle">@style/CustomIconPageIndicator</item>
    </style>
    

    <style name="CustomTitlePageIndicator">
        <item name="android:background">#18FFFFFF</item>
        <item name="footerColor">#000000</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">#000000</item>
        <item name="selectedColor">#000000</item>
        <item name="selectedBold">true</item>
    </style>
    
     <style name="CustomIconPageIndicator">
        <item name="snap">false</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

</resources>